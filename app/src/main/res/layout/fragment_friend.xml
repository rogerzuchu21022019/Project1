<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/ivAddFr"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:src="@drawable/add_friend"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linearLayoutSearch"
            android:layout_width="@dimen/_235sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/boder_background_brown"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivAddFr"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/ivSearchFr"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/search32" />

            <TextView
                android:id="@+id/tvSearchFr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Tìm Bạn bè"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivInformation"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/infomation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/linearLayoutSearch"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linearLayoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/ivAddFr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_37sdp"
                android:textStyle="bold"
                android:text="Kết  nối"/>

            <TextView
                android:id="@+id/tvWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_37sdp"
                android:textStyle="bold"
                android:text="với  những"/>

            <TextView
                android:id="@+id/tvContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_37sdp"
                android:textStyle="bold"
                android:text="người  liên  hệ"/>

            <TextView
                android:id="@+id/tvYourFr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Bạn  bè  của  bạn  chưa  đăng  bất  kỳ  nội  dung  nào."/>

        </LinearLayout>




        <TextView
            android:gravity="center"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutText"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/boder_background_aqu"
            tools:ignore="MissingConstraints" />


        <TextView
            android:gravity="center"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutText"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/boder_background_red"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvConnectToContacts"
            android:gravity="center"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_30sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/boder_background_white"
            android:textStyle="bold"
            android:text="Kết nối với liên hệ trong danh bạn"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/tvConnectWithFb"
            android:gravity="center"
            android:layout_width="@dimen/_276sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvConnectToContacts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/boder_background_brown"
            android:textStyle="bold"
            android:text="Kết nối với bạn bè trên Facebook"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvAccount"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColor="#666666"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tvConnectWithFb"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="Tài khoản được đề xuất"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivInformationSmall"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_71sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/infomation16"
            app:layout_constraintTop_toBottomOf="@id/tvConnectToContacts"
            app:layout_constraintStart_toEndOf="@id/tvAccount"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/avata"
            app:layout_constraintTop_toBottomOf="@id/tvAccount"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvUserName"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@id/tvAccount"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            android:textStyle="bold"
            android:text="Hoa Hanassi"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvFollower"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="#919191"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintTop_toBottomOf="@id/tvAccount"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            android:text="Được follow bởi"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivUse"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="167dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/avt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAccount"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvFollow"
            android:gravity="center"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/boder_background_red"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintTop_toBottomOf="@id/tvAccount"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Follow"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="@dimen/_23sdp"
            android:src="@drawable/cancel32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAccount"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivInviteFr"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/invite_friend32"
            app:layout_constraintTop_toBottomOf="@id/ivUser"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvInviteFr"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_21sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@id/tvFollower"
            app:layout_constraintStart_toEndOf="@id/ivInviteFr"
            android:textStyle="bold"
            android:text="Mời Bạn bè"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvMaintain"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_37sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="#919191"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tvFollower"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            android:text="Hãy duy trì kết nối và xem bài"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvPost"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_49sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="#919191"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tvFollower"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            android:text="đăng của họ"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvInvite"
            android:gravity="center"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/boder_background_brown"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintTop_toBottomOf="@id/tvFollow"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Mời"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>