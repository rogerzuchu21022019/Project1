<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvToolForAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chia sẻ lên"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/ivCloseShare"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/ivCloseShare"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layoutCopyUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivCopyUrl"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"
                            android:src="@drawable/url" />

                        <TextView
                            android:id="@+id/tvCopy"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Sao chép"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7sdp" />

                        <TextView
                            android:id="@+id/tvUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Liên kết"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivMess"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/mess" />

                        <TextView
                            android:id="@+id/tvMess"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Messenger"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutZalo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivZalo"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/zalo1" />

                        <TextView
                            android:id="@+id/tvZalo"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Zalo"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFb"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivFb"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/fb32" />

                        <TextView
                            android:id="@+id/tvFb"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Facebook"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFrOnTopTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivFrOnTopTop"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/send" />

                        <TextView
                            android:id="@+id/tvFr"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Bạn bè" />

                        <TextView
                            android:id="@+id/tvOnTopTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="trên TopTop" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSms"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSms"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/sms" />

                        <TextView
                            android:id="@+id/tvSms"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="SMS" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutOther"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivOther"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/other" />

                        <TextView
                            android:id="@+id/tvOther"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Khác" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/scrollViewBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layoutReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivReport"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/report" />

                        <TextView
                            android:id="@+id/tvReport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Báo cáo" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDoNotCare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivDoNotCare"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/unlove" />

                        <TextView
                            android:id="@+id/tvDoNot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Không" />

                        <TextView
                            android:id="@+id/tvCare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="quan tâm" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSaveVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSaveVideo"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/download" />

                        <TextView
                            android:id="@+id/tvSaveVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Lưu video" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDuet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivDuet"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/duet" />

                        <TextView
                            android:id="@+id/tvDuet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Duet" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutStitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivStitch"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:textSize="@dimen/_8sdp"
                            android:src="@drawable/stitch" />

                        <TextView
                            android:id="@+id/tvStitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Stitch" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAddToFavorites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivAddToFavorites"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/save_favorite" />

                        <TextView
                            android:id="@+id/tvAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Thêm vào" />

                        <TextView
                            android:id="@+id/tvToFavorites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Yêu thích" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutLivePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivLivePhoto"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/live_photo" />

                        <TextView
                            android:id="@+id/tvLivePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Live Photo" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutShareWithGif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivShareWithGif"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:src="@drawable/gif" />

                        <TextView
                            android:id="@+id/tvShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:text="Chia sẻ dưới" />

                        <TextView
                            android:id="@+id/tvWithGif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:text="dạng GIF" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</layout>