<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="team.tiktok.tiktokapp.data.User" />
        <variable
            name="heart"
            type="team.tiktok.tiktokapp.data.Heart" />
    </data>

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/layoutMain"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="?attr/actionBarSize">
           <LinearLayout
               android:id="@+id/linearLayout"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               tools:ignore="MissingConstraints">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_50sdp"
                   tools:context=".ProfileFM">

                <ImageView
                    android:id="@+id/ivAddFriend"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/add_friend"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                   <TextView
                       android:id="@+id/tvFullName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="@{user.fullName}"
                       android:textSize="@dimen/_14sdp"
                       android:textStyle="bold"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <ImageView
                       android:id="@+id/tvList1"
                       android:layout_width="@dimen/_20sdp"
                       android:layout_height="@dimen/_20sdp"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:src="@drawable/list1"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/tvFullName"
                       app:layout_constraintTop_toTopOf="parent" />

                   <ImageView
                       android:id="@+id/tvEye"
                       android:layout_width="@dimen/_20sdp"
                       android:layout_height="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_10sdp"
                       android:src="@drawable/eye"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/ivList"
                       app:layout_constraintTop_toTopOf="parent" />

                   <ImageView
                       android:id="@+id/ivList"
                       android:layout_width="@dimen/_20sdp"
                       android:layout_height="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_10sdp"
                       android:src="@drawable/list"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       tools:ignore="MissingConstraints" />
               </androidx.constraintlayout.widget.ConstraintLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   tools:context=".ProfileFM">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/civAvatar"
                       android:layout_width="@dimen/_70sdp"
                       android:layout_height="@dimen/_70sdp"
                       android:layout_gravity="center"
                       android:layout_marginTop="@dimen/_20sdp"
                       android:src="@drawable/ic_launcher_background" />

                   <TextView
                       android:id="@+id/topTopId"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:text="@{user.topTopID}"
                       android:textSize="@dimen/_12sdp" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:weightSum="3">


                       <TextView
                           android:id="@+id/tvFollowing"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_40sdp"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:text="@{String.valueOf(user.following),default =0}"
                           android:textSize="@dimen/_12sdp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/tvFollower"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="@{String.valueOf(user.follower),default =0}"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:textSize="@dimen/_12sdp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/tvLike"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:text="@{String.valueOf(user.hearts),default =0}"
                           android:layout_marginEnd="@dimen/_40sdp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:textSize="@dimen/_12sdp"
                           android:textStyle="bold" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:weightSum="3">

                       <TextView
                           android:id="@+id/titleFollowing"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_40sdp"
                           android:layout_marginTop="@dimen/_3sdp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:text="Đang Follow"
                           android:textSize="@dimen/_12sdp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/titleFollower"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/_3sdp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:text="Follower"
                           android:textSize="@dimen/_12sdp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/titleLike"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/_3sdp"
                           android:layout_marginEnd="@dimen/_40sdp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:text="Thích"
                           android:textSize="@dimen/_12sdp"
                           android:textStyle="bold" />
                   </LinearLayout>

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/constrainMid"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/btnEditProfile"
                           android:layout_width="@dimen/_150sdp"
                           android:layout_height="@dimen/_40sdp"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:text="Sửa hồ sơ"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />


                       <TextView
                           android:id="@+id/tvAddBio"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:text="Nhấn để thêm tiểu sử"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@+id/btnEditProfile" />

                   </androidx.constraintlayout.widget.ConstraintLayout>


                   <!--                <LinearLayout-->
                   <!--                    android:id="@+id/linear"-->
